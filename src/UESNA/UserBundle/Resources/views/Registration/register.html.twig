{% extends "UESNAUserBundle::base.html.twig" %}
{% block title %}Inscription{% endblock %}
{% block body %}

    <center xmlns="http://www.w3.org/1999/html">
        <div class="form-box" id="login-box">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register col-sm-5 col-sm-offset-3">
                <div class="header">S'inscrire</div>
                    <div class="form-group">
                        <input type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" class="form-control" placeholder="Pseudo" required="required" maxlength="255" pattern=".{2,}">
                    </div>
                    <div class="form-group ">
                        <input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" class="form-control" placeholder="E-Mail" required="required">
                    </div>
                    <div class="form-group">
                        <input type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" class="form-control" placeholder="Mot de passe" required="required">
                    </div>
                    <div class="form-group">
                        <input type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" class="form-control" placeholder="Mot de passe"required="required">
                    </div>
                   <div> <p>   En cliquant  sur s'incrire vous acceptez nos <a href="#">Conditions d'utilisation et Politique de confidentialité</a> </p></div>
                    <button class="btn btn-primary" href="{{ 'registration.submit'|trans }}" />S'inscrire</button>
                    <div class="text-center"><a href="{{ path('fos_user_security_login') }}">Déjà membre ?</a></div>

            </form>
        </div>
    </center>
{% endblock %}